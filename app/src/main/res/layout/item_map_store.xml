<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/iv_store_item_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_white_circle"
            android:elevation="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_store_con"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/cairo_bold"
            android:textAlignment="viewStart"
            android:textColor="@color/title_color"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_store_item_image"
            app:layout_constraintStart_toEndOf="@+id/iv_store_item_image"
            app:layout_constraintTop_toTopOf="@+id/iv_store_item_image"
            tools:text="Floor name" />

    <TextView
            android:id="@+id/tv_floor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/cairo"
            tools:text="Floor 1"
            android:textColor="@color/light_text_color"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_store_name"
            app:layout_constraintStart_toEndOf="@+id/tv_store_name"
            app:layout_constraintTop_toTopOf="@+id/tv_store_name" />


</androidx.constraintlayout.widget.ConstraintLayout>